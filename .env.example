# GuardAnt Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Application
APP_NAME=GuardAnt
APP_URL=http://localhost:5174
ADMIN_URL=http://localhost:5173

# API Ports
ADMIN_API_PORT=3001
PUBLIC_API_PORT=3002
WORKERS_PORT=3099

# Frontend Ports
ADMIN_FRONTEND_PORT=5173
STATUS_FRONTEND_PORT=5174

# Security (generate secure random strings)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this
REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-this
SESSION_SECRET=your-super-secret-session-key-min-32-chars-change-this
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-change-this

# Database
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_VHOST=/

# Golem Network (optional for development)
GOLEM_ENABLED=false
GOLEM_CHAIN_ID=600606
GOLEM_HTTP_URL=https://kaolin.holesky.golem-base.io/rpc
GOLEM_WS_URL=wss://kaolin.holesky.golem-base.io/rpc/ws
GOLEM_PRIVATE_KEY=
GOLEM_WALLET_ADDRESS=

# Email (optional for development)
EMAIL_ENABLED=false
SENDGRID_API_KEY=
EMAIL_FROM=moon.pl.kr@gmail.com

# Monitoring (optional for development)
MONITORING_ENABLED=false
SENTRY_DSN=
PROMETHEUS_ENABLED=false
JAEGER_ENDPOINT=

# Feature Flags
ENABLE_GOLEM_STORAGE=false
ENABLE_ANALYTICS=true
ENABLE_BILLING=false
ENABLE_MFA=false

# Development
HOT_RELOAD=true
DEBUG=false
LOG_LEVEL=info